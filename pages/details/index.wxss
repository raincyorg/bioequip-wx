/* pages/details/index.wxss */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.mainpdPanel{
  width:100%;

}
slide-image{
  width:100%;
  height:150px;
  overflow: auto;
}
/*标题栏样式  */
.titlePanel{
  width: 100%;
  padding:5px;
  border-bottom: 1px solid gray;
}
.pdmanu{
  display: inline-block;
  width: 100%;
  height: 16px;
  line-height: 16px;
  font-size: 12px;
  padding-left: 5px;
}
.pdtype,.pdbrand,.pdorg{
  display: inline-block;
  width: 40%;
  height: 16px;
  line-height: 16px;
  font-size: 12px;
  padding-left: 5px;
}
.pdtitle{
  display: inline-block;
  padding-left: 5px;
  width: 100%;
  height: 20px;
  line-height: 20px;
  font-size: 16px;
  font-weight: bold;
}
/*产品详情栏样式  */
.pruDetail{
  width: 100%;
}
.pdcheckbar{
  width:100%;
  border-bottom:1px solid gray;
}
.parambtn,.detailbtn{
  width: 49%;
  display: inline-block;
  padding:5px 0px 5px 0px;
  height: 20px;
  line-height: 20px;
  text-align: center;
  font-size: 15px;
}
/*底部栏样式  */
.footer{
  display: flex;
  width: 100%;
  height:45px;
  line-height: 45px; 
  padding:0px;
  margin: 0px;
  position: absolute;
  left: 0px;
  bottom: 0px;
  box-sizing: border-box;
}
.save,.unsave,.manuinfo,.mkphone{
  display: flex;
  height: 45px;
  line-height: 45px;
  justify-content: center;
  border:1px solid #fff;
  background-color: #42BD56;
  font-size: 14px;
  color: #fff;
}
.save,.unsave{
  width: 25%;
}
.save::before{
  content:'\2764';
  color:red;
  font-size: 14px;
}
.unsave::before{
  content: '\2764';
  color:#fff;
  font-size: 14px;
}
.manuinfo{
  width:25%;
}
.mkphone{
  width:50%;
}