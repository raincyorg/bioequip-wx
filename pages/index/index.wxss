/**index.wxss**/
::-webkit-scrollbar{
  width:0;
  height: 0;
  color: transparent;
}
page{
  overflow-y:hidden; 
}
.mask{
  width:100%;
  height:800px;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 200;
  color: transparent;
  background-color: transparent;
}
.search-container {
  background-color: #42BD56;
  color: #FFF;
  width:100%;
}
#movable{
  width:100%;
  height: 101px;
  overflow: hidden;
  transition: height 200ms ease-in-out;
}
.fx{
  position:relative;
  display: flex; 
  justify-content: center; 
  width:96%;
  padding:5px 2%;
}

.fx input {
  display: flex; 
  background: #FFF;
  color: #AAA;
  padding: 5px 10px;
  width: 100%;
  border-radius: 3px;
}
 .fx icon {
  display: flex;
  position: absolute;
  right: 15px;
  bottom:27%;
  z-index: 100; 
} 

.fx image{
  display: flex; 
  top:30px;
  width:250px;
  height:65px;
}
.fx text{
  display: flex; 
  font-size:12px;
  font-family: '微软雅黑';
}

/*标签栏*/
.section{
  display: flex;
  width: 96%;
  height: 28px;
  background-color: #f5f5f5;
  padding:5px 2% 0px 2%;
  border-bottom:2px solid #42BD56;
}
.nav_bar{
  width: 17%;
  height:28px;
  font-size: 14px;
  line-height: 28px;
  display: inline-block;
  text-align: center;
  border-radius: 5px;
}
.cur_nav{
  width: 17%;
  height:28px;
  font-size: 15px;
  line-height: 28px;
  display: inline-block;
  text-align: center;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
  background-color: #42BD56;
  color:#FFF;
}
/* 主面板 */
.ctx_frame{
  display: flex;
  width:96%;
  padding:10px 2%;
}
/* 大图板块 */
.gtlink{
  display: flex;
  flex-direction: column;
  width:99%;
  padding:0px;
  margin: 0px 0px 15px 0px;
  border-radius: 5px;
  box-shadow: 5px 10px 6px -6px rgba(0, 0, 0, 0.3);
  background-color: #FFF;
}
.gtlink image{
  display: flex;
  width:960px;
  height:120px;
  max-width: 100%;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
}
.gtlink .ad_title{
  display: flex;
  width: 100%;
  height: 18px;
  line-height: 18px;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.7);
  color:#FFF;
  font-size: 14px;
  padding:0px 0px 0px 5px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  box-sizing: border-box;
}
.gtlink .ad_date{
  display:flex;
  width: 100%;
  height: 24px;
  line-height: 24px; 
  color:#000;
  font-size: 12px;
  padding:0px 0px 0px 5px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
/* 中图板块 */
.mdlink{
  display: flex;
  width:99%;
  padding:0px;
  margin: 0px 0px 10px 0px;
  border-radius: 5px; 
  box-shadow: 0 10px 6px -6px rgba(0, 0, 0, 0.3);
  background-color: #f5f5f5;
  position: relative; 
}
.mdlink image{
  width:120px;
  height:120px;
  border-radius:3px; 
  max-width: 120px;
}
.mdlink .ad_title,.date,.manufacture{
   /* width: 67%;  */
  line-height: 18px;
  display: inline-flex;
  padding:3px;
  font-size: 14px;
}
.mdlink .ad_title{
  position: absolute;
  top:0px;
  left: 125px; 
  z-index: 20;
  color: #42BD56;
}
.mdlink .date{
  position:absolute;
  bottom:20px;
  left:125px;
  font-size: 12px;
  z-index:20;
}
.mdlink .manufacture{
  position:absolute;
  bottom: 0px;
  left:125px;
  font-size: 12px;
  z-index: 20;
}
/*小图板块  */
.ltlink{
  display: flex;
  flex-direction: column;
  width:100%;
  padding:5px;
  margin: 0px 0px 15px 0px;
  border-radius: 5px;
  background-color: #f5f5f5;
  position: relative; 
  font-size: 12px;
  box-sizing: border-box；
}
.ltlink text{
  display: flex;
}
/*招聘页面*/
.ep_position{
  font-size: 14px;
  font-weight: bold;
  margin-bottom: 5px;
}