/* pages/brand/index.wxss */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

/*头部样式  */
.manuheader{
  display: flex;
  width: 100%;
  height: 100px;
  justify-content: center;
  align-content: center; 
  flex-direction: column; 
  margin: 0px 0px 5px 0px;
}
.manuName{
  width:100%;
  height:24px;
  line-height:24px;
  font-size:14px;
  font-weight:bold;
  text-align:center;
}
.manuheader image{
  display:flex;
  width:100px;
  height:34px;
  margin: 5px auto;
}
/*导航栏  */
.manuNavbar{
 display:flex;
 flex-direction:row;
 width: 100%;
 height: 25px;
 padding: 0px;
 border-top: 3px solid #dedede;
 background-color: #dedede;
}
.manunavBtn{
  width: 25%;
  height: 25px;
  line-height: 25px;
  font-size: 14px;
  padding: 0px;
  text-align: center;
}
.active{
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
  background-color: white;
}
/*底部栏样式  */
.footer{
  display: flex;
  width: 100%;
  height:40px;
  line-height: 40px; 
  padding:0px;
  margin: 0px;
  position: absolute;
  left: 0px;
  bottom: 0px;
  box-sizing: border-box;
}
.manupdClassify,.manuinfo,.mkphone{
  display: flex;
  height: 40px;
  line-height: 40px;
  justify-content: center;
  border:1px solid #fff;
  background-color: #42BD56;
  font-size: 14px;
  color: #fff;
}
.manupdClassify{
  width: 30%;
}
.manuinfo{
  width:30%;
}
.mkphone{
  width:40%;
}
/*内容  */
.ctx_frame{
  display: flex;
  width:96%;
  padding:10px 2%;
}
/* 大图板块 */
.gtlink{
  display: flex;
  flex-direction: column;
  width:98%;
  padding:0px;
  margin: 0px 1% 15px 1%;
  border-radius: 5px;
  box-shadow: 0px 5px 2px -2px rgba(0, 0, 0, 0.3);
  background-color: #FFF;
}
.gtlink image{
  display:none;
}
.gtlink .ad_title,.ad_date{
  display: inline-block;
  width:100%;
  padding: 5px;
  font-size: 12px;
  line-height: 20px;
  overflow: hidden;
}
.gtlink .ad_title{
  font-weight: bold;
  font-size: 14px;
}
/*第一个大图  */
.gtlink:first-child{
  display: flex;
  flex-direction: column;
  width:98%;
  padding:0px;
  margin: 0px 1% 15px 1%;
  border-radius: 5px;
  box-shadow: 5px 10px 6px -6px rgba(0, 0, 0, 0.3);
  background-color: #FFF;
}
.gtlink:first-child ad_instruction{
  width: 100%;
}
.gtlink:first-child image{
  display: flex;
  width:100%;
  height:120px;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
}
.gtlink:first-child .ad_title{
  display: flex;
  width: 100%;
  height: 18px;
  line-height: 18px;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.7);
  color:#FFF;
  font-size: 14px;
  padding:0px 0px 0px 5px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  box-sizing: border-box;
}
.gtlink:first-child .ad_date{
  display:flex;
  width: 100%;
  height: 24px;
  line-height: 24px; 
  color:#000;
  font-size: 12px;
  padding:0px 0px 0px 5px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
/* 中图板块 */
.mdlink{
  display: inline-flex;
  flex-direction: column;
  width:40%;
  padding:0px;
  margin: 0px 5% 10px 5%;
  border-radius: 5px; 
  box-shadow: 0 10px 6px -6px rgba(0, 0, 0, 0.3);
}
.mdlink image{
  width:100%;
  height:120px;
  border-radius:3px; 
}
.mdlink .ad_title{
  overflow: hidden;
  height: 36px;
  line-height: 18px;
  display: inline-flex;
  padding:3px;
  color: #42BD56;
  font-size: 14px;
}
/*无图板块  */
.ltlink{
  display: flex;
  flex-direction: column;
  width:100%;
  padding:5px;
  margin: 0px 0px 15px 0px;
  border-radius: 5px;
  background-color: #f5f5f5;
  position: relative; 
  font-size: 12px;
  box-sizing: border-box；
}
.ltlink text{
  display: flex;
}
/*招聘页面*/
.ep_position{
  font-size: 14px;
  font-weight: bold;
  margin-bottom: 5px;
}
/* 分类版块 */
.category{
  display: flex;
  flex-direction: column;
  width: 30%;
  position:absolute;
  left: 0px;
  bottom: 40px;
  z-index: 150;
}
.category view{
  width: 100%;
  height: 40px;
  line-height: 40px;
  font-size: 14px;
  background-color: #dedede;
  text-align: center;
  border:1px solid #fff;
  overflow: hidden;
}
.category view:active{
  background-color: #fff;
}
.introduction{
  width: 100%;
  height: 300px;
  padding:5px;
  background-color:#FFF;
  border-radius: 5px;
  border:5px solid #42BD56;
  box-sizing: border-box;
  font-size: 12px;
  position: absolute;
  left: 0px;
  bottom: 40px;
  z-index: 250;
}