/* pages/list/index.wxss */
 ::-webkit-scrollbar{
  width:0;
  height:0;
  color: transparent;
} 
.articlePic{
    width:100%;
    height: 200px;
}
.articleTitle{
  width:100%;
  height: 50px;
  line-height: 50px;
  display: flex;
  justify-content: center;
  align-content: center;
  background: #f5f5f5;
  font-size: 16px;
  font-weight: bold;
  padding:5px;
}

.articleBody{
  width: 100%;
  font-size: 14px;
}
.articlecontent{
  padding:5px;
}


/*底部样式  */
.footer{
  display: flex;
  width: 100%;
  height:45px;
  line-height: 45px; 
  padding:0px;
  margin: 0px;
  position: absolute;
  left: 0px;
  bottom: 0px;
  box-sizing: border-box;
}
.save,.unsave,.manuinfo,.mkphone{
  display: flex;
  height: 45px;
  line-height: 45px;
  justify-content: center;
  border:1px solid #fff;
  background-color: #42BD56;
  font-size: 14px;
  color: #fff;
}
.save,.unsave{
  width: 25%;
}
.save::before{
  content:'\2764';
  color:red;
  font-size: 14px;
}
.unsave::before{
  content: '\2764';
  color:#fff;
  font-size: 14px;
}
.manuinfo{
  width:25%;
}
.mkphone{
  width:50%;
}