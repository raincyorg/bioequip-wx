::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
page{
  background: #fff;
  height:100%;
  overflow-y:hidden; 
} 
/*顶部导航  */
.top_navbar{
  display:flex;
  height: 25px;
  padding: 0px;
  width: 100%;
  background-color: #f5f5f5;
  z-index: 100;
  border-bottom: 1px solid #42BD56;
}
.left_tap,.right_tap{
  display: inline-block;
  width:50%;
  height: 25px;
  line-height:25px;
  font-size: 14px;
  font-weight: bold;
  text-align: center;
  color: gray;
}
.chooseType{
  background-color: #42BD56;
  color:#fff;
}
/*左导航  */
.nav_left{
  display: inline-block;  
  width: 25%;
  height: 100%;
  padding-bottom: 30px;
  background: #f5f5f5;
  text-align: center;
  overflow-y:hidden; 
  box-sizing: border-box;
}
.nav_left .nav_left_items{
  height: 30px;
  line-height: 30px;
  padding: 6px 0;
  border-bottom: 1px solid #dedede;
  font-size: 12px;
  font-family: '微软雅黑';
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.active{
  background: #fff;
}
/*右导航  */
.nav_right{
  position: absolute; 
  top: 26px;
  right: 0;
  flex: 1;    
  width: 75%;
  padding: 0px 0px 10px 5px;
  background: #fff;
  box-sizing: border-box;
  z-index:100; 
}
.nav_right .nav_right_items{
  display: inline-block; 
  margin-bottom: 3px;
  width: 100%; 
  height: 28px; 
  line-height: 28px;
  font-size: 14px;
  font-family: '微软雅黑';
  background:#f5f5f5;
}

.nav_right .nav_right_items:active{
  background:#fff; 
}

.nav_right .nav_right_items text{
  display: inline;
  font-size: 14px;
  margin-left:5px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.nav_right .nav_right_items text:last-child{
  float:right;
  margin-right: 5px;
} 
/*产品列表  */
.productList{
  position: absolute; 
  top: 35px;
  right: 0px;
  flex: 1;   
  width: 75%;
  height: 100%;
  padding: 30px 5px 35px 0px;
  background: #fff;
  box-sizing: border-box;
}
.smtitle{
  display: inline-block;
  width: 100%;
  height: 18px;
  line-height: 18px;
  font-size: 14px;
  font-weight: bold;
  padding:0px 0px 5px 5px;
  border-bottom: 1px solid #dedede;
}
.brands{
  display: inline-block;
  margin: 3px 5px 5px 5px;
  width:100px;
  height: 60px;
  box-shadow: 0 5px 3px -3px rgba(0, 0, 0, 0.3);
}
.brands image{
  display: flex;
  width: 100px;
  height: 40px;
  padding:0px;
}
.brandtitle{
  display: flex;
  width: 100px;
  height: 15px;
  padding: 0px;
  margin: 0px;
  line-height: 15px;
  font-size: 11px;
  font-weight: bold;
  justify-content: center;
}
.product{
  display:flex;
  align-items:center;
  margin-bottom: 3px;
  font-family: '微软雅黑';
  width:100%;
  box-shadow: 0 10px 6px -6px rgba(0, 0, 0, 0.3);
}
.product image{
  flex:0;
  padding:5px;
  width: 70px;
  height: 70px; 
}
.introduction{
  display: flex;
  flex:1;
  flex-direction: column;
}
.manuf,.price{
  font-size: 10px;
  width: 100%;
  padding:5px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.title{
  font-size: 12px;
  width:100%;
  padding:5px;
  flex:1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
